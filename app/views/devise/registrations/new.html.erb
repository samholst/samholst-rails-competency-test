<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="input-field">
    <%= f.text_field :first_name, autofocus: true %>
    <%= f.label :first_name, 'data-error' => "Invalid Fist Name", 'data-success' => "Valid First Name" %><br />
  </div>

  <div class="input-field">
    <%= f.text_field :last_name%>
    <%= f.label :last_name, 'data-error' => "Invalid Last Name", 'data-success' => "Valid Last Name" %><br />
  </div>

  <div class="input-field">
    <%= f.email_field :email, class: 'validate' %>
    <%= f.label :email, 'data-error' => "Invalid Email Address", 'data-success' => "Valid Email Address" %><br />
  </div>

  <div class="input-field">
    <%= f.password_field :password, autocomplete: "off" %>
    <%= f.label :password %>
  </div>

  <div class="input-field">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    <%= f.label :password_confirmation %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum password length)</em></br></br>
    <% end %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Sign up", class: "waves-effect waves-light btn no-decoration" %>
  </div>
<% end %>

<br>
<%= render "devise/shared/links" %>
