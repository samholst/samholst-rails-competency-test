<% if logged_in?(:editor) %>
  <%= link_to 'View Article', article %>
  <%= link_to 'Edit', edit_article_path(article) %>
  <%= link_to 'Delete', article, id: "article-#{article.id}-delete", method: :delete, data: { confirm: 'Are you sure?' } %>
<% elsif logged_in?(:admin) %>
  <%= link_to 'View Article', article %>
<% else %>
  <%= link_to 'View Article', article %>
<% end %>
