    <%= form.label :content %>
    <%= form.text_area :content, id: :article_content %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%#= form.text_field :category, id: :article_category %>
    <select id="article_category" name="article[category]" style="display: inherit;">
      <option value="Ruby">Ruby</option>
      <option value="Games">Games</option>
      <option value="Cars">Cars</option>
    </select>
    <br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
