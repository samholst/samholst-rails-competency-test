<h1>Articles</h1>

<% if logged_in?(:editor_user) %>
  <%= link_to 'New Article', new_article_path  %>
  <br><br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.category %></td>
        <td><%= article.user.first_name + " " + article.user.last_name %></td>
        <td><%= link_to 'Show', article%></td>
        <td><%= link_to 'Edit', edit_article_path(article) if logged_in?(:editor_user) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:editor_user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
