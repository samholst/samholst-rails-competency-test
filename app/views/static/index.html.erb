<div class="row article-row">
  <h4 class="center-content">Ruby Articles</h4>
  <% @ruby_articles.each do |ruby_article| %>
    <div class="col s12 m6 article-main">
      <div class="card horizontal">
        <div class="card-stacked">
          <h2 class="header article-title"><%= ruby_article.title %></h2>
          <div class="card-content">
            <p><%= ruby_article.content %></p>
          </div>
          <div class="card-action">
            <%= link_to 'View Article', ruby_article %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

